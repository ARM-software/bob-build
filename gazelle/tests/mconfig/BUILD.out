load("@bazel_skylib//rules:common_settings.bzl", "bool_flag", "int_flag", "string_flag")
load("@bazel_skylib//lib:selects.bzl", "selects")

# gazelle:bob_root

bool_flag(
    name = "feature_a",
    build_setting_default = False,
)

config_setting(
    name = "config_feature_a",
    flag_values = {
        ":feature_a": "true",
    },
)

bool_flag(
    name = "feature_b",
    build_setting_default = True,
)

config_setting(
    name = "config_feature_b",
    flag_values = {
        ":feature_b": "true",
    },
)

# depends on: //:feature_b
bool_flag(
    name = "new_hw",
    build_setting_default = False,
)

config_setting(
    name = "interim_config_new_hw",
    flag_values = {
        ":new_hw": "true",
    },
)

selects.config_setting_group(
    name = "config_new_hw",
    match_all = [
        ":interim_config_new_hw",
        "//:config_feature_b",
    ],
    visibility = [":__subpackages__"],
)

string_flag(
    name = "option_b",
    build_setting_default = "--secret",
)

bool_flag(
    name = "debug",
    build_setting_default = True,
)

config_setting(
    name = "config_debug",
    flag_values = {
        ":debug": "true",
    },
)

string_flag(
    name = "string_option",
    build_setting_default = False,
)

int_flag(
    name = "int_option",
    build_setting_default = False,
)

# depends on: //:debug
bool_flag(
    name = "an_option",
    build_setting_default = True,
)

config_setting(
    name = "interim_config_an_option",
    flag_values = {
        ":an_option": "true",
    },
)

selects.config_setting_group(
    name = "config_an_option",
    match_all = [
        ":interim_config_an_option",
        "//:config_debug",
    ],
    visibility = [":__subpackages__"],
)

bool_flag(
    name = "foo_menu",
    build_setting_default = False,
)

config_setting(
    name = "config_foo_menu",
    flag_values = {
        ":foo_menu": "true",
    },
)
