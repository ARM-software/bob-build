config FEATURE_A
    bool "Enable Feature A"
    default n

config FEATURE_B
    bool "Enable Feature B"
    default y

config NEW_HW
    bool "New hardware platform"
    depends on FEATURE_B
    default n

config OPTION_B
    string "Set Option B"
    depends on FEATURE_A
    default "--secret"

config DEBUG
    bool "Set debug flags"
    default y

menu "A menu"
	depends on DEBUG

config AN_OPTION
	bool "An option in the menu"
	default y

endmenu

menuconfig FOO_MENU
	bool "Foo menu"


source "internal/Mconfig"
