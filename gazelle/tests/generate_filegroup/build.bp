// Main build file

bob_filegroup {
    name: "greet_srcs",
    srcs: ["srcs/*.c"],
    feature_a: {
        srcs: [
            "internal/secure.c",
        ],
    },
}

bob_glob {
    name: "glob_lib_srcs",
    srcs: ["lib/**/*.c"],
    exclude: ["lib/**/exclude_*.cpp"],
    exclude_directories: true,
    allow_empty: false,
}
