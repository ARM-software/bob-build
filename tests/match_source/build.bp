bob_binary {
    name: "match_source_bin",
    srcs: [
        "main.c",
        "data.txt",
    ],
    ldflags: ["-Wl,-dynamic-list,{{match_srcs \"*.txt\"}}"],
}

bob_generate_source {
    name: "match_source_gen",
    srcs: [
        "main.c",
        "custom.txt",
    ],
    out: ["custom_src_gen"],
    cmd: "cat {{match_srcs \"custom.txt\"}} {{match_srcs \"main.c\"}} > $out",
    build_by_default: true,
}

bob_alias {
    name: "bob_test_match_source",
    srcs: [
        "match_source_bin",
        "match_source_gen",
    ],
}
