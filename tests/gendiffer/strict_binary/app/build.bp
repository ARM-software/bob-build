// Test that we setup the toolchains correct for target type

bob_executable {
    name: "simple_bob_executable_host",
    srcs: ["src.cpp"],
    host_supported: true,
    target_supported: false,
    build_by_default: true,
}

bob_executable {
    name: "simple_bob_executable_target",
    srcs: ["src.cpp"],
    host_supported: false,
    target_supported: true,
    build_by_default: true,
    builder_android_bp: {
        enabled: false,
    },
}

// Ensure install group interopt works

bob_install_group {
    name: "bin",
    builder_android_bp: {
        install_path: "bin",
    },
    builder_ninja: {
        install_path: "out/bin",
    },
}

bob_binary {
    name: "bob_binary_install_group",
    srcs: ["hello_world.cpp"],
    install_group: "bin",
}

bob_executable {
    name: "bob_executable_install_group",
    srcs: ["hello_world.cpp"],
    install_group: "bin",
}
