bob_install_group {
    name: "IG_modules",
    builder_android_bp: {
        install_path: "lib/modules",
    },
    builder_ninja: {
        install_path: "lib/modules",
    },
}

bob_kernel_module {
    name: "test_module1",
    kernel_dir: "/tmp/thispathdoesnotexist",
    kernel_cc: "{{.kernel_cc}}",
    kernel_clang_triple: "{{.kernel_clang_triple}}",
    srcs: [
        "Kbuild",
        "test_module1.c",
    ],

    // TODO: redact bazel paths for includes
    // local_include_dirs: ["."],
    install_group: "IG_modules",
    build_by_default: true,
    osx: {
        enabled: false,
    },
}

bob_kernel_module {
    name: "test_module2",
    kernel_dir: "/tmp/thispathdoesnotexist",
    kernel_cc: "{{.kernel_cc}}",
    kernel_clang_triple: "{{.kernel_clang_triple}}",
    srcs: [
        "Kbuild",
        "test_module2.c",
    ],
    extra_symbols: [
        "test_module1",
    ],

    // TODO: redact bazel paths for includes
    // local_include_dirs: ["../module1"],

    install_group: "IG_modules",
    build_by_default: true,
    osx: {
        enabled: false,
    },
