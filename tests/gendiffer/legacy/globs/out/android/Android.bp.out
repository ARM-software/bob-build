
genrule {
    name: "_check_buildbp_updates_redacted",
    srcs: [
        "build.bp",
        "module/build.bp",
    ],
    out: ["androidbp_up_to_date"],
    tool_files: ["scripts/verify_hash.py"],
    cmd: "python $(location scripts/verify_hash.py) --hash redacted --out $(out) -- $(in)",
}

cc_binary {
    name: "glob_test",
    srcs: [
        "main.c",
        "test_exclude_glob.c",
        "test_glob.c",
        "dir1/func1.c",
        "dir2/func2.c",
    ],
}

cc_binary {
    name: "glob_test_exclude",
    srcs: [
        "src/inside/a/namespace/func.cpp",
        "src/inside/a/namespace/main.cpp",
    ],
    exclude_srcs: ["src/**/exclude_*.cpp"],
}

cc_binary {
    name: "glob_test_nested",
    srcs: [
        "module/main.c",
        "module/test_exclude_glob.c",
        "module/test_glob.c",
        "module/dir1/func1.c",
        "module/dir2/func2.c",
    ],
}

cc_binary {
    name: "nested_glob_test",
    srcs: [
        "module/main.c",
        "module/test_exclude_glob.c",
        "module/test_glob.c",
        "module/dir1/func1.c",
        "module/dir2/func2.c",
    ],
}

cc_binary {
    name: "nested_glob_test_exclude",
    srcs: [
        "module/src/inside/a/namespace/func.cpp",
        "module/src/inside/a/namespace/main.cpp",
    ],
    exclude_srcs: ["module/src/**/exclude_*.cpp"],
}

cc_binary {
    name: "nested_test_exclude_srcs",
    srcs: [
        "module/src/inside/a/namespace/main.cpp",
        "module/src/inside/a/namespace/func.cpp",
    ],
}

cc_binary {
    name: "test_exclude_srcs",
    srcs: [
        "src/inside/a/namespace/main.cpp",
        "src/inside/a/namespace/func.cpp",
    ],
}

