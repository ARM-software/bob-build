

bob_glob {
    name: "nested_src_glob",
    srcs: ["**/*.c"],
}

bob_binary {
    name: "nested_glob_test",
    srcs: [":nested_src_glob"],
}

bob_binary {
    name: "nested_glob_test_exclude",
    srcs: ["src/**/*.cpp"],
    exclude_srcs: ["src/**/exclude_*.cpp"],
}

bob_glob {
    name: "nested_src_glob_exclude",
    srcs: ["src/**/*.cpp"],
    exclude: [
        "src/**/main.cpp",
        "**/exclude_this_file.cpp",
        "src/inside/a/exclude_this_too.cpp",
    ],
}

bob_binary {
    name: "nested_test_exclude_srcs",
    srcs: [
        "src/inside/a/namespace/main.cpp",
        ":nested_src_glob_exclude",
    ],
}
