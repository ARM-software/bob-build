bob_static_library {
    name: "lib_st_output",
    srcs: ["libst/libst.c"],
    out: "static_output",
}

bob_shared_library {
    name: "lib_sh_output",
    srcs: ["libsh/libsh.c"],
    out: "libshared_output",
}

bob_binary {
    name: "binary_output",
    out: "bob_output",
    srcs: ["out.c"],
    shared_libs: ["lib_sh_output"],
    static_libs: ["lib_st_output"],
}

bob_generate_source {
    name: "verify_output",
    module_deps: [
        "binary_output",
        "lib_sh_output",
        "lib_st_output",
    ],
    out: ["generated_output"],
    tool: "verify.py",
    cmd: "python ${tool} --out='${binary_output_out}' --expected='bob_output' && " +
        "python ${tool} --out='${lib_sh_output_out}' --expected='libshared_output' --shared && " +
        "python ${tool} --out='${lib_st_output_out}' --expected='static_output' --static && " +
        "cp ${binary_output_out} ${out}",
}

bob_alias {
    name: "bob_test_output",
    srcs: [
        "verify_output",
    ],
}
