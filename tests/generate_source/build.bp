/////////////////////////////////////////////////////////////////////////////////////
// Simple cases

// On Android output path can look like: out/target/product/hikey960/gen/STATIC_LIBRARIES/generate_source_single/single.cpp
// On Linux output path can look like: build/gen/generate_source_single/single.cpp

bob_generate_source {
    name: "generate_source_single",
    srcs: [
        "before_generate.in",
    ],
    out: ["single.cpp"],

    tool: "generator.py",
    cmd: "python ${tool} --in ${in} --out ${out}",
}

bob_generate_source {
    name: "generate_source_multiple_in",
    srcs: [
        "before_generate.in",
        "before_generate2.in",
        "before_generate3.in",
    ],
    out: ["multiple_in.cpp"],

    tool: "generator.py",
    cmd: "python ${tool} --in ${in} --out ${out}",
}

bob_generate_source {
    name: "generate_source_multiple_out",
    srcs: [
        "before_generate.in",
    ],
    out: [
        "multiple_out.cpp",
        "multiple_out2.cpp",
    ],

    tool: "generator.py",
    cmd: "python ${tool} --in ${in} --out ${out}",
}

bob_generate_source {
    name: "generate_source_multiple_in_out",
    srcs: [
        "before_generate.in",
        "before_generate2.in",
        "before_generate3.in",
    ],
    out: ["multiple_in_out.cpp"],
    always_enabled_feature: {
        out: ["multiple_in_out2.cpp"],
    },

    tool: "generator.py",
    cmd: "python ${tool} --in ${in} --out ${out}",
}

// Simple cases
/////////////////////////////////////////////////////////////////////////////////////

