    out: ["level_2_single.cpp"],

    tool: "generator.py",
    cmd: "python ${tool} --in ${in} --out ${out}",
}

bob_generate_source {
    name: "generate_source_single_level3",
    module_srcs: ["generate_source_single_level2"],

    out: ["level_3_single.cpp"],

    tool: "generator.py",
    cmd: "python ${tool} --in ${in} --out ${out}",
}

bob_generate_source {
    name: "generate_source_single_nested_with_extra",
    module_srcs: ["generate_source_single_level2"],

    srcs: [
        "before_generate.in",
