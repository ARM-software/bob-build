bob_filegroup {
    name: "filegroup_impl",
    srcs: ["src/impl.cpp"],
}

bob_glob {
    name: "glob_main",
    srcs: ["**/main.cpp"],
    allow_empty: false,
}

bob_filegroup {
    name: "forward_filegroup",
    always_enabled_feature: {
        srcs: [":filegroup_impl"],
    },
}

bob_binary {
    name: "test_filegroup_simple",
    srcs: [
        ":glob_main",
        ":forward_filegroup",
    ],
}

bob_alias {
    name: "bob_test_filegroups",
    srcs: [
        "test_filegroup_simple",
        "test_filegroup_simple_deprecated",
    ],
}
